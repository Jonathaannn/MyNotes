</head>
<body>

    <header>
        <%- include('./view/navbar.ejs') %> 
    </header>
    <div class="container mb-5 g-0">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <%- include('./view/notes.ejs') %>
                </div> 
            </div>
